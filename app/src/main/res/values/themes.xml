<resources xmlns:tools="http://schemas.android.com/tools">

    <!--//for initial onboarding screens-->
    <style name="OnboardTheme" parent="Theme.Material3.Light.NoActionBar">
        <!-- Status Bar -->
        <item name="android:statusBarColor" >@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!--//for majority of app screens with appbar-->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Status Bar -->
        <item name="android:statusBarColor" >@color/optionalColor</item>
        <item name="android:windowLightStatusBar">false</item>

        <item name="colorControlNormal">@color/white</item>

        <!--primary color-->
    <item name="colorPrimary">@color/optionalColor</item>
    </style>

    <!--for toolbar title text-->
    <style name="ToolbarTitleTextAppearance" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">24sp</item>
        <!--<item name="android:textColor">@color/white</item>-->
    </style>

    <!--password reset dialog -->
    <style name="CustomDialogStyle" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>
    
    <!--for bottom sheet dialog box-->
    <style name="BottomSheetStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>
    
    <!--<style name="BottomSheetModal" parent="Widget.Design.BottomSheet.Modal">
        <item name="background">@drawable/bottom_sheet</item>
    </style>-->


    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">25dp</item>
        <item name="cornerSizeTopLeft">25dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>



</resources>
